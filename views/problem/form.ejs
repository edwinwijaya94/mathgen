<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
</head>

<body>
<%- include('../header') -%>

<!-- FORM -->
  <div class="col-md-8 col-md-offset-2">
    <div>
      <h3>Create New Problem</h3>
    </div>
    <div>
      <form id="problem-form">
        <div id="problem-id" hidden><%= data ? data._id : '' %></div>
        Course:<br>
        <select class="form-control" id="course">
          <% for(var i=0; i < data.courseList.length; i++) { %>
            <option data-course-id="<%= data.courseList[i]._id %>" <%= (data.course != null && data.courseList[i].name === data.course.name)? 'selected' : '' %> > <%= data.courseList[i].name %> </option>
          <% } %>
        </select>
        <br>
        Topic:<br>
        <input id="topic" class="form-control" type="text" value="<%= data.topic %>" required>
        <br>
        Template:<br>
        <textarea rows="3" id="template" class="form-control" required><%= data.template %></textarea>
        <br>
        Seed Value:<br>
        <input id="seed-value" class="form-control" type="text" value="<%= data.seedValue %>" required>
        <br>
        Formula:<br>
        <input id="formula" class="form-control" type="text" value="<%= data.formula %>" required>
        <br><br>
        <button type="submit" class="btn btn-default btn-primary">Submit</button>
      </form>
    </div>
  </div>
</body>

</html>

