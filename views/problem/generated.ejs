<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
</head>

<body>
<%- include('../header') -%>

  <div class="col-md-8 col-md-offset-2">
    <div>
      <h3>Problem ID: <div id="problem-id"><%= data._id %></div> </h3>
    </div id="problem-div">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 id="problem-set" class="panel-title"><%= data.course %></h3>
        </div>
        <div id="problem-content" class="panel-body">
          <div id="topic"><%= data.topic %></div>
          <div id="problem"><pre><%= data.problem %></pre></div>
          <div id ="values" hidden><%= JSON.stringify(data.values) %></div>
        </div>
        <div id="answer-div">
          <form id="answer-form" method="post">
            <input id="answer" class="form-control" type="text" name="answer" autocomplete="off" required>
            <br>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
      </div>
    <div>
      
    <div>
  </div>
</body>

</html>